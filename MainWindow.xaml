<Window x:Class="HaImageViewer_BG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style ="{StaticResource WindowBaseStyle}"
        Title="HaImageViewer" Height="600" Width="800"
        KeyDown="Window_KeyDown">
    <Grid>
        <Image Name="ImageViewer"
               Source="{Binding CurrentImageSource}"
               Stretch="Uniform"
               MouseLeftButtonUp="ImageViewer_MouseLeftButtonUp"/>
    </Grid>
</Window>